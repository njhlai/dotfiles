## 捌 (reader/listener)
bspc rule -a Zathura desktop='^2' split_ratio=0.6 state=tiled follow=on focus=on

## 伍 (pager/messenger)
bspc rule -a Skype desktop='^5' follow=on focus=on
bspc rule -a sshclient desktop='^5' follow=on focus=on

## 肆 (media)
bspc rule -a jukebox desktop=${JUKEBOX_DESKTOP} state=tiled follow=on focus=on

echo "bspwm: finished setting up rules" 1>&2
