#!/bin/bash
#
# Autostart terminals

. ~/.private/env.bash

run=(${TERMINAL} --class)
shflag="-e"
shcom=(sh -c 'neofetch; exec ${SHELL}')
if [[ ${TERMINAL} == "sakura" ]] ; then
	shflag="-x"
	shcom=('sh -c "neofetch; exec ${SHELL}"')
fi

startup_lock_file=/tmp/bspwm-startup.lock
if [[ ! -f ${startup_lock_file} ]] ; then
	${run[@]} primary &
	${run[@]} top -e btop &
	${run[@]} secondary ${shflag} "${shcom[@]}" &
fi